<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yashica.streakpomodoro">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:label="Streak Pomodoro"
        android:supportsRtl="true"
        android:theme="@style/Theme.StreakPomodoro">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".timer.PomodoroService" android:exported="false"/>

        <!-- App widget provider -->
        <receiver android:name=".widget.StudyWidgetProvider" android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/study_widget_info" />
        </receiver>

    </application>

</manifest>
